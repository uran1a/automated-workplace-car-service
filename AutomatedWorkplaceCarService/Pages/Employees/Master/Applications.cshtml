@page
@model AutomatedWorkplaceCarService.WEB.Pages.Employees.Master.ApplicationsModel
@{
}
@if(@Model.PendingApplications != null)
{
	if(@Model.PendingApplications.Count > 0)
	{
		<div class="row justify-content-center">
			<div class="col">
				<h2>Ожидающие заявки</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			@foreach(var application in Model.PendingApplications)
			{
				<div class="col-12 col-sm-6 col-lg-6">
					<div class="card-deck">
						<div class="card m-3">
							<div class="card-header text-center cardHeaderStyle">
								<h3>@application.ServiceName</h3>
							</div>
							<div class="text-center cardBodyStyle">
								<img class="card-image-top imageThumbnail" src="data:image/jpeg;base64,@(Convert.ToBase64String(application.ImageCarContent))" asp-append-version="true" />
							</div>
							<div class="card-body">
								<p class="card-text">
									Автомобиль: @application.BrandName @application.ModelName <br/>
									ФИО клиента: @application.ClientFullName
								</p>
							</div>
							<div class="card-footer text-center">
								<a asp-page="/Employees/Master/EvaluationApplication" asp-route-Id="@application.Id" class="btn btn-success m-1 buttonShadow">Оценить</a>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	}
}

<div class="row justify-content-center">
	<div class="col">
		<h2>Активные заявки</h2>
	</div>
</div>
<div class="row justify-content-center">
	@if(Model.ActiveApplications.Count > 0)
	{
		@foreach(var application in Model.ActiveApplications)
		{
			<div class="col-12 col-sm-6 col-lg-6">
				<div class="card-deck">
					<div class="card m-3">
						<div class="card-header text-center cardHeaderStyle">
							<h3>@application.ServiceName</h3>
						</div>
						<div class="text-center cardBodyStyle">
							<img class="card-image-top imageThumbnail" src="data:image/jpeg;base64,@(Convert.ToBase64String(application.ImageCarContent))" asp-append-version="true" />
						</div>
						<div class="card-body">
							<p class="card-text">
								Автомобиль: @application.BrandName @application.ModelName <br/>
								ФИО клиента: @application.ClientFullName
							</p>
						</div>
						<div class="card-footer text-center">
							<a asp-page="/Employees/Master/Application" asp-route-Id="@application.Id" class="btn btn-success m-1 buttonShadow">Выполнить</a>
						</div>
					</div>
				</div>
			</div>
		}
	}
	else {
		<div class="col">
			<h3>У вас нет заявок</h3>
		</div>
	}
</div>